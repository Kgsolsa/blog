filters:
  and:
    - file.ext == "md"
    - file.folder.startsWith("posts")
properties:
  note.title:
    displayName: Title
  note.date:
    displayName: Date
  note.pubDate:
    displayName: Date
views:
  - type: cards
    name: Posts
    order:
      - title
      - date
    sort:
      - property: date
        direction: DESC
    cardSize: 230
    image: note.image
    imageAspectRatio: 0.55
